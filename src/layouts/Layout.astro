---
import { ViewTransitions } from 'astro:transitions';
import "../styles/global.css";

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = 'Cookbook - My Recipe Collection',
	description = 'A beautiful recipe management app built with Astro and Cloudflare D1'
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<title>{title}</title>
		
		<ViewTransitions />
	</head>
	<body>
		<slot />
	</body>
</html>

