---
import Layout from '../layouts/Layout.astro';
import RecipeCard from '../components/RecipeCard.astro';
import { getDB } from '../db/client';
import { getRecipes } from '../db/queries';
import type { Recipe } from '../db/schema';

const DB = (Astro.locals.runtime as any)?.env?.DB as D1Database | undefined;
let recipes: Recipe[] = [];

if (DB) {
  const db = getDB(DB);
  recipes = await getRecipes(db);
}
---

<Layout title="My Cookbook">
	<div class="container mx-auto px-4 py-8">
		<div class="flex justify-between items-center mb-8">
			<h1 class="text-4xl font-bold">My Cookbook</h1>
			<a href="/recipes/new" class="btn bg-orange-400 hover:bg-orange-500 text-white border-0 shadow-md hover:shadow-lg transition-all gap-2">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
				</svg>
				Add New Recipe
			</a>
		</div>

		{recipes && recipes.length > 0 ? (
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				{recipes.map((recipe) => (
					<RecipeCard recipe={recipe} />
				))}
			</div>
		) : (
			<div class="text-center py-16">
				<div class="text-6xl mb-4">üç≥</div>
				<p class="text-xl text-base-content/60 mb-6">No recipes yet</p>
				<a href="/recipes/new" class="btn bg-orange-400 hover:bg-orange-500 text-white border-0 shadow-md hover:shadow-lg transition-all gap-2 btn-lg">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
					</svg>
					Create Your First Recipe
				</a>
			</div>
		)}
	</div>
</Layout>
