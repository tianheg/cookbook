---
import Layout from '../layouts/Layout.astro';
import RecipeCard from '../components/RecipeCard.astro';
import { getDB } from '../db/client';
import { getRecipes } from '../db/queries';
import type { Recipe } from '../db/schema';

const DB = (Astro.locals.runtime as any)?.env?.DB as D1Database | undefined;
let recipes: Recipe[] = [];

if (DB) {
  const db = getDB(DB);
  recipes = await getRecipes(db);
}
---

<Layout title="My Cookbook">
	<div class="container mx-auto px-4 py-8">
		<div class="flex justify-between items-center mb-8">
			<h1 class="text-4xl font-bold">My Cookbook</h1>
			<a href="/recipes/new" class="btn btn-primary">
				Add New Recipe
			</a>
		</div>

		{recipes && recipes.length > 0 ? (
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				{recipes.map((recipe) => (
					<RecipeCard recipe={recipe} />
				))}
			</div>
		) : (
			<div class="text-center py-16">
				<p class="text-xl text-base-content/60 mb-4">No recipes yet</p>
				<a href="/recipes/new" class="btn btn-primary">
					Create Your First Recipe
				</a>
			</div>
		)}
	</div>
</Layout>
